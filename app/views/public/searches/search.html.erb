<div class= "container">
  <div class= "card shadow">
    <div class= "card-body">
      <div class= "input-group">
        <h5 class= "card-text">詳細検索</h5>
         <%= render 'form' %>
      </div>
    </div>
  </div>
  <div class= "card shadow">
    <div class= "card-body">
      <h5 class= "card-text">検索結果</h5>
      <% if @records.present?%>
        <%= flash[:result] %>
        <%= render 'index',project: @records %>
      <% else %>
        <p>検索結果はありません</p>
      <% end %>
    </div>
  </div>
</div>