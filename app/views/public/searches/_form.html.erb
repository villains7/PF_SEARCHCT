<%= form_with url: result_path, method: :get, local: true do |f| %>
  <%= f.text_field :keyword ,value: @keyword,placeholder: "キーワードを入力"%>
  <%= f.text_field :salesman ,value: @salesman,placeholder: "担当営業名を入力"%>
  <br><%= f.select :region, Member::REGION, selected: @region, include_blank: "地域を選択"%>
      <%= f.label :date,"年月を選択"%>
      <!--終わりの年を設定しないと、続けて検索をする際に表示年数が少なくなってしまうからend_year設定。-->
      <%= f.date_select :date,start_year: 2013,end_year: 2027,use_month_numbers: true,discard_day: true,include_blank: true,selected: @date%>
        <br><%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag|%>
              <%= tag.label do %>
              <%= tag.check_box%>
              <%= tag.text%>
              <% end %>
            <% end %>
            <br><%= f.submit '検索',class: "btn btn-info w-25" %>
<% end %>