<div class= "container">
  <div class= "card shadow">
    <div class= "card-body">
      <div class= "row">
        <div class="col-3">
          <!--<#%= image_tag member,class:"mt-3 rounded-circle";%>-->
        </div>
        <div class= "col-9">
          <p class= "card-text" style="border-bottom: solid 1px">
            名前:  <%= @member.last_name %><%= @member.first_name %>
          </p>
          <p class= "card-text" style="border-bottom: solid 1px">
            所属地域:  <%= @member.region %>
          </p>
          <p class= "card-text" style="border-bottom: solid 1px">
            所属部署:  <%= @member.section %>
          </p>
          <p class= "card-text">
            <% if @member.year == "" %>
              <p class="text"style="border-bottom: solid 1px">編集ページで入社年月日を入力してください</p>
            <% else %>
              <p class="text"style="border-bottom: solid 1px">入社年月:  <%= @member.year %>年<%= @member.month %>月</p>
            <% end %>
          </p>
        </div>
      </div>