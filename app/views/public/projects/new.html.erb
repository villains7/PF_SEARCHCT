<div class= "container">
  <div class= "card shadow">
    <div class= "card-body">
      <h4 class= "mt-3 ml-3 mb-3">案件登録</h4>
        <%= render 'error',project: @project %>
        <%= form_with model: @project, url: projects_path,method: :post do |f| %>
        <!--ラベルと遷移先要検討--><!--セレクトボックスの位置修正する-->
        <div class= "card-text text-center mb-3">
          <%= f.text_field :title ,placeholder: "案件タイトル",class: "w-75"%>
        </div>
        <div class= "card-text d-flex justify-content-center mb-3">
          <p class= "mr-3">
            <%= f.select :region, Member::REGION,include_blank: "地域"%>
          </p>
          <p class= "mr-3">
            <%= f.text_field :salesman,placeholder: "担当営業" %>
          </p>
        </div>
        <div class= "row justify-content-center mb-3">
          <!--引数の順番によって役割が変わる。-->
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
              <%= tag.label do %>
                <%= tag.check_box %>
                <%= tag.text%>
              <% end %>
            <% end %>
        </div>
        <div class= "row justify-content-center mb-3">
          <%= f.text_area :caption,rows: '15',placeholder: "案件詳細説明をここに",class: "w-75" %>
        </div>
        <div class= "row justify-content-center mb-3">
          <%= f.file_field :project_image,accept: "image/*"%>
        </div>
        <div class= "row justify-content-center mb-3">
          <%= f.submit "案件登録",class: "btn w-75 new_btn"%>
        </div>
        <% end %>
    </div>
  </div>
</div>